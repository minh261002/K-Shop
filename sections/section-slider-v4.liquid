<!-- section-slider-v1.liquid -->

<div data-section-id="{{ section.id }}" data-section-type="section-slider-v4" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
<section class="slider-show">
  <div class="container">

  <div class="top-banner5">
				<div class="row">
					<div class="col-md-3 col-sm-12 col-xs-12">
						<div class="bncat-slider5">
							<div class="wrap-item" data-pagination="false" data-navigation="true" data-itemscustom="[[0,1]]">
                              {%assign count = 1|plus:0 %}
                             {%assign num = 0|plus:0 %}
                              {%for block in section.blocks%}
                              {%if block.type == 'category' %}
                              {%assign num = num|plus:1 %}
                               {%endif%}
                              {%endfor%}
                               {%for block in section.blocks%}
                              {%if block.type == 'category' %}
                               {%assign t = count|modulo:6 %}
                               {%if count == 1 or opendiv == count %}
                                  <div class="list-bn-cat5">
                                {%endif%}
								
									<div class="item-bn-cat5">
										<div class="bncat-thumb5">
											<a href="{{block.settings.category_url}}">
                                              
                                          {%if block.settings.category_icon != blank %}<img alt="" src="{{block.settings.category_icon|img_url:'small'}}">
                                              {%else%}
                                              <img class="pulse-shrink" src="{{'icon_slider_v3.png'|asset_url}}" alt="" />
                                              {%endif%}
                                          </a>
										</div>
										<a href="{{block.settings.category_url}}">{{block.settings.category_name}}</a>
									</div>
								 {%if t == 0 or count == num %}
                                        </div>
                                        {%endif%}
                                          {%if t == 0 %}
                                          {%assign opendiv = count|plus:1 %}
                                          {%endif%}
                                          {%assign count = count|plus:1 %}
                              {%endif%}
                              {%endfor%}
								
							</div>
						</div>
					</div>
					<div class="col-md-9 col-sm-12 col-xs-12">
						<div class="banner-slider banner-slider5">
							<div class="wrap-item" data-autoplay="true" data-pagination="false" data-navigation="true" data-itemscustom="[[0,1]]">
								
                              {%for block in section.blocks %}
                              {%if block.type == 'slider' %}
									
                              <div class="item-banner5">
									<div class="banner-thumb">
										<a href="{{block.settings.slider_text_button_url}}">
                                              
                                           {%if block.settings.image_slider == blank%}
                                            <img  src="{{'slider-v3.png'| asset_url }}" alt="">
                                            {%else%}
                                            <img src="{{block.settings.image_slider|img_url:'master'}}" alt="" />
                                            {%endif%}
                                      </a>
									</div>
									<div class="banner-info {%if block.settings.slider_position_text == 'center'%} text-center  top-to-bottom{%elsif block.settings.slider_position_text == 'right'%} text-right right-to-left{%else%}left-to-right{%endif%}  time-delay1">
										<h2 class="title60  " style="color:{{block.settings.slider_text_1_color}}">{{block.settings.slider_text_1}}</h2>
										<h3 class="title30 thin "  style="color:{{block.settings.slider_text_2_color}}">{{block.settings.slider_text_2}}</h3>
										<h3 class="title30" style="color:{{block.settings.slider_text_3_color}}">{{block.settings.slider_text_3}}</h3>
									</div>
								</div>
                                  	{%endif%}
                                 	{%endfor%}  
							</div>
						</div>
					</div>
				</div>
			</div>
  </div>
		<!-- End Banner -->
</section>
</div>



