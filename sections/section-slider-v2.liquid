<!-- section-slider-v2.liquid -->

<div data-section-id="{{ section.id }}" data-section-type="section-slider-v2" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
<section class="slider-show">
  <div class="content-top2">
			<div class="container">
				<div class="row">
					<div class="col-md-3 hidden-sm hidden-xs">
						<div class="wrap-cat-icon wrap-cat-icon2">
							<h2 class="title14 white bg-color title-cat-icon">{{section.settings.category_title}}</h2>
							<div class="wrap-list-cat-icon">
								<ul class="list-cat-icon" data-items="12">
                                  {%for block in section.blocks%}
                              {%if block.type == 'category' %}
									<li {%if block.settings.show_megamenu%}class="has-cat-mega" {%endif%}>
									<a href="{{block.settings.category_url}}">{%if block.settings.category_icon != blank %}<img alt="" src="{{block.settings.category_icon|img_url:'small'}}">{%endif%}<span>{{block.settings.category_name}}</span></a>
									{%if block.settings.style_column1 == 'style1' %}
                                  <div class="cat-mega-menu cat-mega-style1">
										<div class="row">
											<div class="col-md-4 col-sm-3">
												<div class="list-cat-mega-menu">
													<h2 class="title-cat-mega-menu">{{block.settings.col1_title}}</h2>
													<ul>
                                                      {% for link in linklists[block.settings.col1_menu].links %}
														<li><a href="{{link.url}}">{{link.title}}</a></li>
                                                      {%endfor%}
													</ul>
												</div>
											</div>
											<div class="col-md-4 col-sm-3">
												<div class="list-cat-mega-menu">
													<h2 class="title-cat-mega-menu">{{block.settings.col2_title}}</h2>
													<ul>
														{% for link in linklists[block.settings.col2_menu].links %}
														<li><a href="{{link.url}}">{{link.title}}</a></li>
                                                      {%endfor%}
													</ul>
												</div>
											</div>
											<div class="col-md-4 col-sm-3">
												<div class="banner-image">
													<a href="{{block.settings.col3_url}}"><img alt="" src="{{block.settings.col3_banner|img_url:'grande'}}"></a>
												</div>
											</div>
										</div>
									</div> 
                                  {%else%}
                                  <div class="cat-mega-menu cat-mega-style2">
										<h2 class="title-cat-mega-menu">{{block.settings.title_style_2}}</h2>
										<div class="row">
                                          {% for i in (1..3) %}
                                          {%capture _product%}col{{i}}_product{%endcapture%}
                                          {%assign product = all_products[block.settings[_product]] %}
                                          
											<div class="col-md-4 col-sm-3">
                                       
												{% include 'product-item-v4' %}
											</div>
                                          {%endfor%}

										</div>
									</div>
                                  {%endif%}
								</li>
                                  {%endif%}
                              {%endfor%}
									
								</ul>
							</div>
						</div>
					</div>
					<div class="col-lg-7 col-md-9 col-sm-12 col-xs-12">
						<div class="service2">
							<ul class="list-none">
                              {%for block in section.blocks%}
                              		{%if block.type == 'policy' %}
                                  <li><a href="{{block.settings.product_url}}"><img src="{%if block.settings.product_image == blank%}{{'icon2.png'| asset_url }} {%else%}{{block.settings.product_image|img_url:'small'}}{%endif%}" alt="" />{{block.settings.product_name}}</a></li>
                                   {%endif%}
                              {%endfor%}  
								
							</ul>
						</div>
					</div>
					<div class="col-lg-2 hidden-md hidden-sm hidden-xs">
                      {%for block in section.blocks%}
                        {%if block.type == 'collection' %}
						<div class="trending-box2">
							<h2 class="title14 white bg-color">{{ block.settings.collection_title }}</h2>
							<div class="trending-slider2">
								<div class="wrap-item" data-autoplay="true" data-pagination="true" data-navigation="false" data-itemscustom="[[0,1]]">
                                  {%assign count = 1|plus:0 %}
                                  {%assign num = 0|plus:0 %}
                                  
                                    {%for product in collections[col].products limit:limit %}
                                        {%assign num = num|plus:1 %}
                                    {%endfor%}
                                  {%for product in collections[block.settings.collection].products limit:block.settings.collection_limit %}
                                {%assign t = count|modulo:2 %}
                                     {%if t != 0 %}
									<div class="item-trending2">
                                       {%endif%}
                                      
										{%include 'product-item-v4' %}
                                      
									{%if t == 0 or count == num %}
                                      </div>
                                      {%endif%}
                                      {%assign count = count|plus:1 %}
                                    {%else%}
                                    {% include 'product-item-v4-empty-slider-v2' %}

                                  {%endfor%}
                                  
								</div>
							</div>
						</div>
                      {%endif%}
                     {%endfor%}
					</div>
				</div>
			</div>
		</div>
		<!-- End Content Top 2 -->
		<div class="banner-slider banner-slider2 bg-slider">
			<div class="wrap-item" data-transition="fade" data-autoplay="true" data-pagination="false" data-navigation="true" data-itemscustom="[[0,1]]">
				
              
              {%for block in section.blocks %}
                              {%if block.type == 'slider' %}
                <div class="item-banner">
					<div class="banner-thumb">
						<a href="{{block.settings.slider_text_button_url}}">
                                              
                                           {%if block.settings.image_slider == blank%}
                                            <img  src="{{'slider_v2.jpg'| asset_url }}" alt="">
                                            {%else%}
                                            <img src="{{block.settings.image_slider|img_url:'master'}}" alt="" />
                                            {%endif%}

                                          </a>
					</div>
					<div class="banner-info animated" data-animated="bounceInRight">
						<div class="inner-banner-info white">
							<h2 class="title60" style="color:{{block.settings.slider_text_1_color}}">{{block.settings.slider_text_1}}</h2>
							<h2 class="title30" style="color:{{block.settings.slider_text_2_color}}">{{block.settings.slider_text_2}}</h2>
							<p style="color:{{block.settings.slider_text_3_color}}">{{block.settings.slider_text_3}}</p>
							<a class="btn-rect bg-color white radius" href="{{block.settings.slider_text_button_url}}" class="shopnow" style="color:{{block.settings.slider_text_button_color}}; background:{{block.settings.slider_button_background}};"><span>{{block.settings.slider_text_button}}</span></a>
						</div>
					</div>
				</div>
               {%endif%}
             {%endfor%}  
				
			</div>
		</div>
		<!-- End Banner -->
</section>
</div>



