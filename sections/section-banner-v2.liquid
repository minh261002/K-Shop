
<div data-section-id="{{ section.id }}" data-section-type="section-banner-v2" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
<section class="banner-v2">
      <div class="container">
        <div class="list-adv-color4">
				<div class="row">
					<div class="col-md-6 col-sm-6 col-xs-12">
						<div class="item-adv-color info-left color-maroon color{{ section.id }}">
							<div class="adv-color-thumb">
								
                              <a href="{{section.settings.banner1_url}}">
                              {%if section.settings.banner1_image == blank%}
                              <img  src="{{'banner_v2.png'| asset_url }}" alt="">
                              {%else%}
                              <img src="{{section.settings.banner1_image|img_url:'grande'}}" alt="" />
                              {%endif%}
                          </a>
							</div>
							<div class="adv-color-info">
								<div class="inner-adv-color-info">
									<h2>{{section.settings.banner1_title}}</h2>
									<p>{{section.settings.banner1_text}}</p>
									<a class="shopnow" href="{{section.settings.banner1_url}}"><span>{{section.settings.banner1_shopnow}}</span></a>
								</div>
							</div>
						</div>
					</div>
					<div class="col-md-6 col-sm-6 col-xs-12">
						<div class="item-adv-color info-right color-cyan color{{ section.id }}">
							<div class="adv-color-thumb">
								<a href="{{section.settings.banner2_url}}">
                              {%if section.settings.banner2_image == blank%}
                              <img  src="{{'banner_v2.png'| asset_url }}" alt="">
                              {%else%}
                              <img src="{{section.settings.banner2_image|img_url:'grande'}}" alt="" />
                              {%endif%}
                              </a>
							</div>
							<div class="adv-color-info">
								<div class="inner-adv-color-info">
									<h2>{{section.settings.banner2_title}}</h2>
									<p>{{section.settings.banner2_text}}</p>
									<a class="shopnow" href="{{section.settings.banner2_url}}"><span>{{section.settings.banner2_shopnow}}</span></a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
  </div>
  </section>
</div>
<style>
  {%if section.settings.banner1_background != blank %}
  {% assign hex2rgb_rgb = section.settings.banner1_background  | remove: '#' | downcase | split: '' %}
{% assign hex2rgb_str = '' %}
{% assign hex2rgb_chars = 'a,b,c,d,e,f' | split: ',' %}
{% assign hex2rgb_remainders = '10,11,12,13,14,15' | split: ',' %}
{% for hex2rgb_i in (0..5) %}
    {% assign hex2rgb_is_char = 0 %}
    {% for hex2rgb_c in (0..5) %}
        {% unless hex2rgb_is_char == 1 %}
            {% if hex2rgb_rgb[hex2rgb_i] == hex2rgb_chars[hex2rgb_c] %}
                {% assign hex2rgb_is_char = 1 %}
                {% capture hex2rgb_str %}{{ hex2rgb_str }}{{ hex2rgb_remainders[hex2rgb_c] }}|{% endcapture %}
            {% endif %}
        {% endunless %}
    {% endfor %}    
    {% if hex2rgb_is_char == 0 %}
        {% capture hex2rgb_str %}{{ hex2rgb_str }}{{ hex2rgb_rgb[hex2rgb_i] }}|{% endcapture %}
    {% endif %}
{% endfor %}
{% assign hex2rgb_rgb = hex2rgb_str | split: "|" %}
{% assign hex2rgb_r = hex2rgb_rgb[0] | times: 16 | plus: hex2rgb_rgb[1] %}
{% assign hex2rgb_g = hex2rgb_rgb[2] | times: 16 | plus: hex2rgb_rgb[3] %}
{% assign hex2rgb_b = hex2rgb_rgb[4] | times: 16 | plus: hex2rgb_rgb[5] %}
  
  .color-maroon.color{{ section.id }} .adv-color-info, .color-maroon.color{{ section.id }} .adv-color-info::before, .color-maroon.color{{ section.id }} .adv-color-info::after {
    background: rgba({{ hex2rgb_r }}, {{ hex2rgb_g }}, {{ hex2rgb_b }}, 0.8);   
	}
  .color-maroon.color{{ section.id }} .adv-color-info .shopnow {
    color: {{section.settings.banner1_background}};
}
  {%endif%}
  
  {%if section.settings.banner2_background != blank %}
  {% assign hex2rgb_rgb = section.settings.banner2_background  | remove: '#' | downcase | split: '' %}
{% assign hex2rgb_str = '' %}
{% assign hex2rgb_chars = 'a,b,c,d,e,f' | split: ',' %}
{% assign hex2rgb_remainders = '10,11,12,13,14,15' | split: ',' %}
{% for hex2rgb_i in (0..5) %}
    {% assign hex2rgb_is_char = 0 %}
    {% for hex2rgb_c in (0..5) %}
        {% unless hex2rgb_is_char == 1 %}
            {% if hex2rgb_rgb[hex2rgb_i] == hex2rgb_chars[hex2rgb_c] %}
                {% assign hex2rgb_is_char = 1 %}
                {% capture hex2rgb_str %}{{ hex2rgb_str }}{{ hex2rgb_remainders[hex2rgb_c] }}|{% endcapture %}
            {% endif %}
        {% endunless %}
    {% endfor %}    
    {% if hex2rgb_is_char == 0 %}
        {% capture hex2rgb_str %}{{ hex2rgb_str }}{{ hex2rgb_rgb[hex2rgb_i] }}|{% endcapture %}
    {% endif %}
{% endfor %}
{% assign hex2rgb_rgb = hex2rgb_str | split: "|" %}
{% assign hex2rgb_r = hex2rgb_rgb[0] | times: 16 | plus: hex2rgb_rgb[1] %}
{% assign hex2rgb_g = hex2rgb_rgb[2] | times: 16 | plus: hex2rgb_rgb[3] %}
{% assign hex2rgb_b = hex2rgb_rgb[4] | times: 16 | plus: hex2rgb_rgb[5] %}
  
  .color-cyan.color{{ section.id }} .adv-color-info, .color-cyan.color{{ section.id }} .adv-color-info::before, .color-cyan.color{{ section.id }} .adv-color-info::after {
    background: rgba({{ hex2rgb_r }}, {{ hex2rgb_g }}, {{ hex2rgb_b }}, 0.8);
  }
  .color-cyan.color{{ section.id }} .adv-color-info .shopnow {
    color: {{section.settings.banner2_background}};
}
  {%endif%}

</style>

