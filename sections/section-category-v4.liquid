


<div data-section-id="{{ section.id }}" data-section-type="section-category-v4" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <section class="hot-category-v4">
		<div class="container">
				<div class="category-color color-more">
				<div class="header-cat-color">
					<h2 class="title18">{{section.settings.section_title}}</h2>
				</div>
				<div class="morecat-slider5">
					<div class="wrap-item" data-pagination="false" data-navigation="true" data-itemscustom="[[0,1],[1024,2],[1200,3]]">
						 {%assign n = 0 %}
       						{%assign number = 0 %}   
                           {%for block in section.blocks%}
                          {%assign number = number |plus:1 %} 
                          {%endfor%}
                     
                      {%for block in section.blocks%}
                   
                      	{%assign a1 = 2 |times:n |plus:1 %}
       					{%assign a2 = 2 |times:n |plus:2 %}
         			{%if forloop.index == a1 %}
                      <div class="item-more5">
							<div class="item-morecat5">
								<div class="product-thumb">
									
                                <a class="product-thumb-link" href="{{block.settings.category_viewmore_url}}">
                               {%if block.settings.category_image == blank %}
                              	<img alt="" src="{{'category_v4.png'|asset_url}}">
                          		{%else%}
                          	  	<img alt="" src="{{block.settings.category_image|img_url:'medium'}}">
                          		{%endif%}
								</a>
                                  
								</div>
								<div class="morecat-info5">
									<h2 class="title14">{{block.settings.category_title}}</h2>
									<ul class="list-none">
										
                                       {% for link in linklists[block.settings.category_menu].links %}
                                        <li><a href="{{link.url}}">{{link.title}}</a></li>
                                      {%endfor%}
									</ul>
									
                                  <a href="{{block.settings.category_viewmore_url}}" class="seeall">{{block.settings.category_viewmore}}</a>
								</div>
							</div>
                        {%if number == forloop.index %}
                          </div>
                        {%endif%}
                          {%endif%}
                        {%if forloop.index == a2%}
							<div class="item-morecat5">
								<div class="product-thumb">
									
                                <a class="product-thumb-link" href="{{block.settings.category_viewmore_url}}">
                               {%if block.settings.category_image == blank %}
                              	<img alt="" src="{{'category_v4.png'|asset_url}}">
                          		{%else%}
                          	  	<img alt="" src="{{block.settings.category_image|img_url:'medium'}}">
                          		{%endif%}
								</a>
                                  
								</div>
								<div class="morecat-info5">
									<h2 class="title14">{{block.settings.category_title}}</h2>
									<ul class="list-none">
										
                                       {% for link in linklists[block.settings.category_menu].links %}
                                        <li><a href="{{link.url}}">{{link.title}}</a></li>
                                      {%endfor%}
									</ul>
									
                                  <a href="{{block.settings.category_viewmore_url}}" class="seeall">{{block.settings.category_viewmore}}</a>
								</div>
							</div>
						</div>
                       {%endif%}
                  
                  		{%assign m = forloop.index | modulo:2 %}
                        {% if m == 0 %}
                        {%assign n = n|plus:1 %}
                        {%endif%}
                      {%endfor%}
						
                      
						
					</div>
				</div>
			</div>
		</div>
  </section>
</div>

{% schema %}

  {
    "name": "Category v4",
    "class" : "index-section",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": "Title",
        "default": "Hot category"
      },
      {
        "type": "header",
        "content": "Section Space"
      },
      {
        "type": "text",
        "id": "margin_top",
        "label": "Margin Top",
        "info": "Defined in pixels. Do not add the 'px' unit."
      },
      {
        "type": "text",
        "id": "margin_bottom",
        "label": "Margin Bottom",
        "info": "Defined in pixels. Do not add the 'px' unit."
      }
    ],
    "blocks": [
      {
      "type": "category",
      "name": "category",
      "settings": [
    	{
          "type": "text",
          "id": "category_title",
          "label": "Title",
            "default":"Sport"
        },
		{
          "type": "image_picker",
          "id": "category_image",
          "label": "Image"
        },
        {
          "type": "link_list",
          "id": "category_menu",
          "label": "Select menu"
        },
        {
          "type": "text",
          "id": "category_viewmore",
          "label": "Text viewmore",
		  "default":"View more"
        },
		{
          "type": "url",
          "id": "category_viewmore_url",
          "label": "Url viewmore"
        }
      ]
      }

    ],
    "presets": [
      {
        "name": "Category v4",
        "category": "category",
        "blocks": [
                {
                "type": "category"
                },
                {
                "type": "category"
                },
                {
                "type": "category"
                },
                {
                "type": "category"
                },
                {
                "type": "category"
                },
                {
                "type": "category"
                }
            ]
      }
    ]
  }
{% endschema %}
