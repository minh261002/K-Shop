<!-- section-slider-v1.liquid -->

<div data-section-id="{{ section.id }}" data-section-type="section-slider-v3" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
<section class="slider-show">
  <div class="container">

  <div class="content-top4">
				<div class="row">
					<div class="col-md-9 col-sm-12 col-xs-12">
						<div class="content-top-left4">
							<div class="cat-icon4">
								<div class="wrap-cat-icon">
									<ul class="list-cat-icon">
										 {%for block in section.blocks%}
                              {%if block.type == 'category' %}
									<li {%if block.settings.show_megamenu%}class="has-cat-mega" {%endif%}>
									<a href="{{block.settings.category_url}}">{%if block.settings.category_icon != blank %}<img alt="" src="{{block.settings.category_icon|img_url:'small'}}">{%endif%}<span>{{block.settings.category_name}}</span></a>
									{%if block.settings.style_column1 == 'style1' %}
                                  <div class="cat-mega-menu cat-mega-style1">
										<div class="row">
											<div class="col-md-4 col-sm-3">
												<div class="list-cat-mega-menu">
													<h2 class="title-cat-mega-menu">{{block.settings.col1_title}}</h2>
													<ul>
                                                      {% for link in linklists[block.settings.col1_menu].links %}
														<li><a href="{{link.url}}">{{link.title}}</a></li>
                                                      {%endfor%}
													</ul>
												</div>
											</div>
											<div class="col-md-4 col-sm-3">
												<div class="list-cat-mega-menu">
													<h2 class="title-cat-mega-menu">{{block.settings.col2_title}}</h2>
													<ul>
														{% for link in linklists[block.settings.col2_menu].links %}
														<li><a href="{{link.url}}">{{link.title}}</a></li>
                                                      {%endfor%}
													</ul>
												</div>
											</div>
											<div class="col-md-4 col-sm-3">
												<div class="banner-image">
													<a href="{{block.settings.col3_url}}"><img alt="" src="{{block.settings.col3_banner|img_url:'grande'}}"></a>
												</div>
											</div>
										</div>
									</div> 
                                  {%else%}
                                  <div class="cat-mega-menu cat-mega-style2">
										<h2 class="title-cat-mega-menu">{{block.settings.title_style_2}}</h2>
										<div class="row">
                                          {% for i in (1..3) %}
                                          {%capture _product%}col{{i}}_product{%endcapture%}
                                          {%assign product = all_products[block.settings[_product]] %}
                                          
											<div class="col-md-4 col-sm-3">
                                       
												{% include 'product-item-v4' %}
											</div>
                                          {%endfor%}

										</div>
									</div>
                                  {%endif%}
								</li>
                                  {%endif%}
                              {%endfor%}
									</ul>
								</div>
							</div>
							<div class="banner-slider banner-slider4 banner-direct-nav">
								<div class="wrap-item" data-pagination="false" data-autoplay="true" data-navigation="true" data-itemscustom="[[0,1]]" data-transition="fade">
                                  {%for block in section.blocks %}
                              {%if block.type == 'slider' %}
									<div class="item-banner4">
										<div class="banner-thumb">
											<a href="{{block.settings.slider_text_button_url}}">
                                              
                                           {%if block.settings.image_slider == blank%}
                                            <img  src="{{'slider-v3.png'| asset_url }}" alt="">
                                            {%else%}
                                            <img src="{{block.settings.image_slider|img_url:'master'}}" alt="" />
                                            {%endif%}

                                          </a>
										</div>
										<div class="banner-info animated" data-animated="bounceInLeft">
											<h2 style="color:{{block.settings.slider_text_1_color}}">{{block.settings.slider_text_1}}</h2>
											<h3 style="color:{{block.settings.slider_text_2_color}}">{{block.settings.slider_text_2}}</h3>
											<h3 style="color:{{block.settings.slider_text_3_color}}">{{block.settings.slider_text_3}}</h3>
										</div>
									</div>
                                  	{%endif%}
                                 	{%endfor%}  
									
								</div>
							</div>
						</div>
					</div>
					<div class="col-md-3 col-sm-12 col-xs-12">
						<div class="content-top-right4">
							<div class="row">
                              {%for block in section.blocks%}
                              		{%if block.type == 'banner' %}
                                  
                              <div class="col-md-12 col-sm-6 col-xs-6">
									<div class="item-adv item-adv4">
										<div class="adv-thumb">
											<a href="{{block.settings.banner_url1}}"><img src=" {%if block.settings.banner_image1 == blank%}{{'banner_slider_v3.png'| asset_url }} {%else%}{{block.settings.banner_image1|img_url:'large'}}{%endif%}" alt="" /></a>
										</div>
										<div class="adv-info">
											<h2>{{block.settings.text1}}</h2>
										</div>
									</div>
								</div>
                              <div class="col-md-12 col-sm-6 col-xs-6">
									<div class="item-adv item-adv4">
										<div class="adv-thumb">
											<a href="{{block.settings.banner_url2}}"><img src=" {%if block.settings.banner_image2 == blank%}{{'banner_slider_v3.png'| asset_url }} {%else%}{{block.settings.banner_image2|img_url:'large'}}{%endif%}" alt="" /></a>
										</div>
										<div class="adv-info">
											<h2>{{block.settings.text2}}</h2>
										</div>
									</div>
								</div>
                                   {%endif%}
                              {%endfor%}
							</div>
						</div>
					</div>
				</div>
			</div>
  </div>
		<!-- End Banner -->
</section>
</div>



